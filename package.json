{
  "name": "portafolio",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc && rsync -a --prune-empty-dirs --include='*/' --include='*.hbs' --include='*.html' --exclude='*' src/views/ dist/views/ && rsync -a --prune-empty-dirs --exclude='*.ts' --exclude='*.tsx' src/public/ dist/public/",
    "start": "node dist/server.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "test": "cross-env NODE_ENV=test ava"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.0",
    "handlebars": "^4.7.7",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "ava": "^5.3.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "kanel": "^3.4.3",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "ava": {
    "files": [
      "src/tests/controllers/user.controller.test.ts",
      "src/tests/controllers/tasks.controller.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
