{{#if isAuthenticated}}
<div class="container mt-4">
    <h2>All Tasks</h2>

    {{#each tasks}}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{this.task_title}}</h5>
            <p class="card-text">{{this.task_description}}</p>
            <p class="card-text"><small class="text-muted">{{this.task_status}}</small></p>
            <a href="/task/{{this.task_id}}" class="btn btn-primary">View Details</a>
            <form action="/task/{{this.task_id}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    {{/each}}

</div>
{{else}}
<div class="container mt-4">
    <h2>Please log in to see tasks</h2>
</div>
{{/if}}