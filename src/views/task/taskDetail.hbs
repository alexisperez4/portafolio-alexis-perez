<div class="container">
    <h1>{{title}}</h1>
    <div class="card mt-5">
        <div class="card-body">
            <h5 class="card-title">{{task.task_title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Task ID: {{task.task_id}}</h6>
            <p class="card-text">{{task.task_description}}</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Status: {{task.task_status}}</li>
                <li class="list-group-item">Created At: {{task.created_at}}</li>
                <li class="list-group-item">Updated At: {{task.updated_at}}</li>
            </ul>
        </div>
    </div>
</div>